<p style="color: green"><%= notice %></p>
 <div class="card">

  <div class="card-header">
    <h2 class='card-title d-flex justify-content-between'>
      <span>Projects</span>
      <%= link_to "New project", new_project_path, class: 'btn btn-primary'%>
    </h2>
  </div>

   <div class="card-body">
    <div id="projects ">
    <% @projects.each do |project| %>
      <%= link_to project, class: 'text-decoration-none' do %>
        <div class="card project-card mb-3">
          <div class="card-body">
          <div class="mb-2">
            <span class="badge badge-<%=project.badge_color%> mb-3"><%= project.status %></span>
            <span class="text-secondary">
              <small><%= project.percent_complete%>% complete</small>
              (<%= project.total_complete %>/<%= project.total_tasks %> tasks)
          </div>
          
          <h5 class="card-title text-dark"><b><%= project.name %></b></h5>
          <p class='text-secondary'><%= project.description %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

  
</div>
</div>







