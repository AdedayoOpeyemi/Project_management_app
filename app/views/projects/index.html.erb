<p style="color: green"><%= notice %></p>
 <div class="card">

  <div class="card-header">
    <h2 class='card-title d-flex justify-content-between'>
      <span>Projects</span>
      <%= link_to "New project", new_project_path, class: 'btn btn-primary'%>
    </h2>
  </div>

   <div class="card-body">
    <div id="projects">
    <% @projects.each do |project| %>
      <%= link_to project, class: 'text-decoration-none' do %>
        <div class="card">
          <div class="card-body">
          <h5 class="card-title text-dark"><b><%= project.name %></b></h5>
          <p class='text-secondary'><%= project.description %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

  <div class="card-body">
    <div id="projects">
    <% @projects.each do |project| %>
      <%= render project %>
      <p>
        <%= link_to "Show", project %>
        <%= link_to "Edit", project %>
        <%= link_to "Delete", project_path(project), data: {
                      turbo_method: :delete,
                      turbo_confirm: "Are you sure?"
                    } %>
      </p>
    <% end %>
  </div>
</div>
</div>





